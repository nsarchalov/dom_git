<h1>Books</h1>

<%= link_to 'New Book', new_book_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Picture</th>
    <th>Author</th>
    <th>Year</th>
    <th>Category</th>
    <th>Actions</th>
  </tr>

  <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= image_tag "/uploads/#{book.id}", weght: 100, height: 150 %></td>
        <td><%= book.author %></td>
        <td><%= book.year %></td>
         <td><%= book.category.name %></td>
        <td>
          <%= link_to 'Edit', edit_book_path(book) %>
          <%= link_to 'Delete', book_path(book),
                      method: :delete,
                      data: {confirm: 'Do you want to remove this book?'} %>
        </td>
      </tr>
  <% end %>

</table>
